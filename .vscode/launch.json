    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py", // location for manage.py file
            "args": [
                "runserver",
                "9000" // specify the port
